{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "subcollection.schema.json",
  "title": "Core Collection Model",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "link.schema.json"
          }
        }
      },
      "required": [
        "metadata",
        "links"
      ]
    },
    {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "link.schema.json"
          },
          {
            "properties": {
              "metadata": {
                "type": "object"
              },
              "links": {
                "type": "array",
                "items": {
                  "$ref": "link.schema.json"
                }
              }
            },
            "required": [
              "metadata",
              "links"
            ]
          }
        ]
      }
    }
  ]
}
